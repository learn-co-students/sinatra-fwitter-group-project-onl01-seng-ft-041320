<div class="uk-section">
    <div class="uk-container uk-container-small">
    <div class="uk-grid-collapse uk-child-width-expand@s uk-text-center uk-margin-medium-top" uk-grid>
    <div>
      <div class="uk-background-muted uk-padding">
      <h2>Welcome, <%= @user.username %>!</h2>


  <form action='/tweets' method="post">
     <fieldset class="uk-fieldset">

        <legend class="uk-legend">Tweet</legend>
        <div class="uk-margin">
            <textarea class="uk-textarea" rows="5" name="content"></textarea>
        </div>
    
        <div class="uk-margin">
    <button class="uk-button uk-button-default">Submit</button>
    </div>
 </fieldset>
  </form>
</div>
</div>
<div>
<div class="uk-background-primary uk-padding uk-light">
<h2>Your Fweets</h2>
<% @tweets.each do |tweet|  %>
<%= tweet.content %><br>
<%= tweet.created_on.strftime("%a. %b %d, %Y at %H:%M") %><br> <br>
<% end %>

</div>
</div>

